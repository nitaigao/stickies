<% content_for :header do %>
	<h1 id="wall-title">New Story</h1>
<% end %>

<% form_for(@story) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
	<%= f.hidden_field :column_id %>
	<%= f.hidden_field :project_id %>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', stories_path %>